        <!-- Pet -->
        <if advanced='"%PetISValid" = "true"'>
          <if subjob="NIN|DNC">
            <equip when="idle|AfterCast" set="PetTP"/>
          </if>
          <else>
            <equip when="idle|AfterCast" set="PetTP">
              <sub>$Shield</sub>
