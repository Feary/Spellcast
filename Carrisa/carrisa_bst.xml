    <!-- set petjug varible -->
    <if equipammo="Dancing Herbal Broth|Wool Grease|Shadowy Broth|Cloudy Wheat Broth">
      <cmd when="Precast">sc var set PetJug %Equip Ammo</cmd>
    </if>
    <!-- Changes needed:
    1. Account of Reward Axes.
    2. Account for situational glyph axe
    3. name pets
    -->
    <!-- Auto set-->
    <!-- Axe-->
    <if mode="or" equipmain="$Axe" equipsub="$AxeSub">
      <disable slot="main|sub|range" />
      <equip when="resting" set="resting"/>
      <!-- Engaged -->
      <if status="engaged">
        <!-- Pet -->
        <if advanced='"%PetISValid" = "true"'>
          <if area="Abyssea*">
            <if advanced='"$AutoFight"=="1"'>
              <cmd when="engaged|aftercast">input /pet Fight &lt;t&gt;</cmd>
            </if>
          </if>
          <if subjob="NIN|DNC">
            <equip when="engaged|AfterCast" set="TP"/>
          </if>
          <else>
            <equip when="engaged|AfterCast" set="TP">
              <sub>$Shield</sub>
            </equip>
          </else>
        </if>
        <!-- No Pet -->
        <else>
          <if subjob="NIN|DNC">
            <equip when="engaged|AfterCast" set="TP"/>
          </if>
          <else>
            <equip when="engaged|AfterCast" set="TP">
              <sub>$Shield</sub>
            </equip>
          </else>
        </else>
      </if>
      <!-- Not Engaged -->
