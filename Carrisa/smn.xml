  <rules>
    <if Spell="Teleport*|Recall*|Warp*|Escape">
      <cmd when="Precast">input /p Casting %Spell</cmd>
      <return/>
    </if>
    <if buffactive="quickening">
      <equip when="aftercast">
        <feet lock="true">Herald's Gaiters</feet>
      </equip>
    </if>
    <if mode="or" advanced='"%PetName" != "None"' type="Summonerpact">
      <if spell="Release">
        <equip when="aftercast">
          <main lock="true">$PDTStaff</main>
        </equip>
      </if>
      <else>
        <if advanced='"$%PetNameMagian" = "1"'>
          <equip when="aftercast">
            <main lock="true">$%PetName-Magian</main>
          </equip>
        </if>
        <else>
          <equip when="aftercast">
            <main lock="true">$PerpStaff</main>
          </equip>
        </else>
      </else>
    </if>
    <!-- Auto set -->
    <if mode="OR" advanced='"$PDT"=="1"' buffactive="weak*">
      <addtochat color='121'>PDT Set Locked</addtochat>
      <equip when="Engaged|Aftercast|idle" set="PDT" />
    </if>
    <elseif advanced='"$MDT"=="1"'>
      <addtochat Color="121">MDT Set Locked</addtochat>
      <equip when="Engaged|Aftercast|idle" set="MDT" />
    </elseif>
    <else>
      <!-- Melee Sets -->
      <if equipmain="$Club">
        <addtochat color="121">%EquipMain Locked - TP Sets Enabled</addtochat>
        <disable slot="main|sub|range"/>
        <if advanced='"%PetName" != "None"'>
          <Addtochat color="121">Pet is valid</Addtochat>
          <if buffactive="Avatar's Favor">
            <if type="PetCommand" spell="Release">
              <if advanced='"$Refreshset"=="1"'>
                <equip when="Aftercast" set="PDT"/>
              </if>
              <else>
                <equip when="Aftercast" set="Standard" />
              </else>
            </if>
            <else>
              <if status="Engaged">
                <equip when="engaged|Aftercast" set="TP" />
              </if>
              <else>
                <equip when="Idle|Aftercast" set="BloodPactWard" />
              </else>
            </else>
          </if>
          <elseif buffactive="Astral Flow">
            <addtochat color="121">Astral Flow - Skill Set Locked</addtochat>
            <equip when="precast|midcast|Idle|engaged|Aftercast" set="BloodPactWard" />
          </elseif>
          <else>
            <if type="PetCommand" spell="Release">
              <if advanced='"$Refreshset"=="1"'>
                <equip when="Aftercast" set="PDT"/>
              </if>
              <else>
                <equip when="Aftercast" set="Standard" />
              </else>
            </if>
            <elseif type="Bloodpact*">
              <if status="Engaged">
                <equip when="Aftercast" set="TP"/>
              </if>
              <else>
                <!--Equips Carbuncle Mitts for Carbuncle if enabled-->
                <if Advanced='"$CarbuncleMitts"=="1" AND "%PetName" == "Carbuncle"'>
                  <equip when="Engaged|Idle|Aftercast" set="Normalset">
                    <hands>Carbuncle Mitts</hands>
                  </equip>
                </if>
                <elseif advanced='"$DiabolosRope"=="1" AND "%PetName" == "Diabolos"'>
                  <equip when="Engaged|Idle|Aftercast" set="Normalset">
                    <waist>Diabolos's Rope</waist>
                  </equip>
                </elseif>
                <else>
                  <equip when="Engaged|Idle|Aftercast" set="Normalset"/>
                </else>
              </else>
            </elseif>
            <else>
              <if Advanced='"$CarbuncleMitts"=="1" AND "%PetName" == "Carbuncle"'>
                <equip when="Engaged|Idle|Aftercast" set="Normalset">
                  <hands>Carbuncle Mitts</hands>
                </equip>
              </if>
              <elseif Advanced='"$DiabolosRope"=="1" AND "%PetName" == "Diabolos"'>
                <equip when="Engaged|Idle|Aftercast" set="Normalset">
                  <waist>Diabolos's Rope</waist>
                </equip>
              </elseif>
              <else>
                <equip when="Engaged|Idle|Aftercast" set="Normalset"/>
              </else>
            </else>
          </else>
        </if>
        <else>
          <Addtochat color="121">Pet is not valid</Addtochat>
          <equip when="resting" set="resting"/>
          <if type="Summonerpact">
            <if status="Engaged">
              <equip when="Aftercast" set="TP"/>
            </if>
            <else>
              <if Advanced='"$CarbuncleMitts"=="1" AND "%Spell" == "Carbuncle"'>
                <equip when="Engaged|Idle|Aftercast" set="Normalset">
                  <main>$%SpellElementStaff</main>
                  <hands>Carbuncle Mitts</hands>
                </equip>
              </if>
              <elseif Spell="Diabolos" Advanced='"$DiabolosRope"=="1"'>
