  <rules>
    <if equiprring="Prouesse Ring">
      <addtochat color="121">Skill Up Ring</addtochat>
      <equip when="precast|midcast|Aftercast|Idle|Resting|Engaged">
        <rring lock="true">Prouesse Ring</rring>
      </equip>
    </if>
    <!-- Autoset -->
    <equip when="resting" set="Resting" />
    <!-- Brew -->
    <if Buffactive="Transcendency">
      <addtochat color="121">Brew Gear Locked</addtochat>
      <equip when="precast|midcast|Aftercast|Idle|Resting|Engaged" set="Brew"/>
      <Return/>
    </if>
    <elseif mode="OR" advanced='"$PDT"=="1"' buffactive="weak*">
      <addtochat color='121'>PDT Set Locked</addtochat>
      <equip when="Engaged|Aftercast|idle" set="PDT" />
      <if type="Weaponskill">
        <equip when="precast" set="%Spell"/>
      </if>
    </elseif>
    <elseif advanced='"$MDT"=="1"'>
      <addtochat Color="121">MDT Set Locked</addtochat>
      <equip when="Engaged|Aftercast|idle" set="MDT" />
    </elseif>
    <else>
      <!-- DD -->
      <if advanced='"$Mode"=="1"'>
        <disable slot="Main|Sub|Ranged"/>
        <if notequipmain="$Sword">
          <equip>
            <main>$Sword</main>
          </equip>
        </if>
        <if status="engaged">
          <equip when="engaged|AfterCast" set="TP" />
        </if>
        <else>
          <equip when="idle|AfterCast" set="Standard" />
        </else>
      </if>
      <!-- Range-->
      <elseif advanced='"$Mode"=="2"'>
        <disable slot="Main|Sub|Ranged"/>
        <if status="engaged">
          <equip when="engaged|AfterCast" set="RATP" />
        </if>
        <else>
          <equip when="idle|AfterCast" set="Standard" />
        </else>
      </elseif>
      <!-- Racc -->
      <elseif advanced='"$Mode"=="3"'>
        <disable slot="Main|Sub|Ranged"/>
        <if status="engaged">
          <equip when="engaged|AfterCast" set="RaAcc" />
        </if>
        <else>
          <equip when="idle|AfterCast" set="Standard" />
        </else>
      </elseif>
      <!-- QD-->
      <elseif advanced='"$Mode"=="4"'>
        <enable slot="Main|Sub"/>
        <if status="engaged">
          <equip when="engaged|AfterCast" set="TP">
            <main>$QDStaff</main>
          </equip>
        </if>
        <else>
          <equip when="idle|AfterCast" set="Standard">
            <main>$QDStaff</main>
          </equip>
        </else>
      </elseif>
      <else>
        <cmd>sc var set mode 1</cmd>
      </else>
    </else>   
    <!-- Ranged Attack -->
    <if spell="Ranged">
      <!-- Check Ammo-->
      <if notEquipAmmo="$TPBullet">
        <equip when="Precast">
          <ammo>$TPBullet</ammo>
        </equip>
      </if>
      <else>
        <if buffactive="Barrage">
