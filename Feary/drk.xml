  <rules>
    <!-- Skill up Ring and Earring -->
    <if equiprring="Prouesse Ring">
      <addtochat color="121">Skill Up Ring</addtochat>
      <equip when="precast|midcast|Aftercast|Idle|Resting|Engaged">
        <rring lock="true">Prouesse Ring</rring>
      </equip>
    </if>
    <!-- Twilight Set -->
    <if mode='or' advanced='"$TwilightSet"=="1"' buffactive="Weakness" hpplt="30">
      <if buffactive="Reraise">
        <addtochat color="121">PDT Gear Locked</addtochat>
        <equip when="precast|midcast|Aftercast|Idle|Resting|Engaged" set="PDT"/>
      </if>
      <else>
        <addtochat color="121">Twilight Gear Locked</addtochat>
        <equip when="precast|midcast|Aftercast|Idle|Resting|Engaged" set="PDT">
          <head lock="true">Twilight Helm</head>
          <body lock="true">Twilight Mail</body>
        </equip>
      </else>
    </if>
    <!-- Auto sets -->
    <!-- Mode-->
    <if mode="OR" advanced='"$PDT"=="1"' buffactive="weak*">
      <addtochat color='121'>PDT Set Locked</addtochat>
      <equip when="Engaged|Aftercast|idle" set="PDT" />
    </if>
    <elseif advanced='"$MDT"=="1"'>
      <addtochat Color="121">MDT Set Locked</addtochat>
      <equip when="Engaged|Aftercast|idle" set="MDT" />
    </elseif>
    <else>
      <!-- Great Sword -->
      <if equipmain="$GreatSword">
        <!-- ACC Set -->
        <if advanced='"$Mode"=="1"'>
          <addtochat color="121">%Equipmain-ACC Locked</addtochat>
          <disable slot="Main|Sub|Range"/>
          <equip when="resting" set="resting"/>
          <if status="engaged">
            <equip when="Engaged|aftercast" set="GS-ACCTP" />
          </if>
          <else>
            <equip when="Idle|aftercast" set="Standard" />
          </else>
        </if>
        <else>
          <addtochat color="121">%Equipmain-ACC Locked</addtochat>
          <disable slot="Main|Sub|Range"/>
          <equip when="resting" set="resting"/>
          <if status="engaged">
            <equip when="Engaged|aftercast" set="GS-TP" />
          </if>
          <else>
            <equip when="Idle|aftercast" set="Standard" />
          </else>
        </else>
      </if>
      <!-- Scythe -->
      <elseif equipmain="Apocalypse">
        <if subjob="WAR">
          <!-- Aftermath -->
          <if buffactive="Aftermath*">
            <addtochat color="121">%Equipmain Locked</addtochat>
            <disable slot="Main|Sub|Range"/>
            <equip when="resting" set="resting"/>
            <if status="engaged">
              <equip when="Engaged|aftercast" set="AM-WARTP" />
            </if>
            <else>
              <equip when="Idle|aftercast" set="Standard" />
            </else>
          </if>
          <else>
            <addtochat color="121">%Equipmain Locked</addtochat>
            <disable slot="Main|Sub|Range"/>
            <equip when="resting" set="resting"/>
            <if status="engaged">
              <equip when="Engaged|aftercast" set="Apoc-WARTP" />
            </if>
            <else>
              <equip when="Idle|aftercast" set="Standard" />
            </else>
          </else>
        </if>
        <else>
          <!-- Aftermath -->
          <if buffactive="Aftermath*">
            <addtochat color="121">%Equipmain Locked</addtochat>
            <disable slot="Main|Sub|Range"/>
            <equip when="resting" set="resting"/>
            <if status="engaged">
              <equip when="Engaged|aftercast" set="AM-TP" />
            </if>
            <else>
              <equip when="Idle|aftercast" set="Standard" />
            </else>
          </if>
          <else>
            <addtochat color="121">%Equipmain Locked</addtochat>
            <disable slot="Main|Sub|Range"/>
            <equip when="resting" set="resting"/>
            <if status="engaged">
              <equip when="Engaged|aftercast" set="Apoc-TP" />
            </if>
            <else>
              <equip when="Idle|aftercast" set="Standard" />
            </else>
          </else>
        </else>
      </elseif>
      <else>
        <addtochat color="121">Unknown Weapon</addtochat>
        <if status="engaged">
          <equip when="Engaged|aftercast" set="TP" />
        </if>
        <else>
          <equip when="Idle|aftercast" set="Standard" />
        </else>
      </else>
    </else>
    <!--Job Ability Rules -->
    <if type="JobAbility">
      <if buffactive="Sleep|Amnesia|Stun*|Petrication|Terror">
        <cancelspell/>
      </if>
      <else>
        <if spell="Provoke|Defender|Warcry|Berserk">
          <equip when="precast" />
        </if>
        <elseif spell="Arcane Circle">
          <equip when="precast">
