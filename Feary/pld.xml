            <!-- Reprisal -->
            <if mode="or" buffactive="Reprisal" spell="Reprisal">
              <equip when="Engaged|precast|aftercast" set="Shield"/>
            </if>
            <!-- Cover -->
            <elseif Buffactive="Cover">
              <equip when="engaged|Aftercast" set="ACCTP">
