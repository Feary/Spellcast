      <!-- AutoMacroset-->
      <if advanced='"$AutoMacroset"=="1"'>
        <if  Equipsub="$PhysicalShield">
          <cmd when="aftercast">input /macro set 1</cmd>
        </if>
        <else Equipsub="$MagicalShield">
          <cmd when="aftercast">input /macro set 2</cmd>
