        <equip>
          <sub>Ochain</sub>
        </equip>
      </if>
      <if equipsub="Ochain">
        <addtochat color="121">Equipping Aegis</addtochat>
        <equip>
          <sub>Aegis</sub>
        </equip>
      </if>
      <return/>
    </if>
    <if mode='or' advanced='"$TwilightSet"=="1"' buffactive="Weakness" hpplt="10" >
      <addtochat color="121">Twilight Gear Locked</addtochat>
