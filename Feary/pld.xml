              <equip when="Precast" set="HP" />
              <equip when="Midcast" delay="0.75" set="HP" />
            </if>
            <else>
              <equip when="Midcast" set="Enmity|HealingMagic" />
            </else>
          </if>
          <elseif Spell="Cure III">
            <if SpellTargetType="SELF">
              <addtochat color="121">Using Cure Kit for Cure 3</addtochat>
              <MidCastDelay delay="0.9" />
              <equip when="Precast" set="HP" />
              <equip when="Midcast" delay="0.75" set="HP" />
            </if>
            <else>
              <equip when="Midcast" set="Enmity|HealingMagic" />
            </else>
          </elseif>
          <elseif Spell="Cure IV">
            <if SpellTargetType="SELF">
              <addtochat color="121">Using Cure Kit for Cure 4</addtochat>
              <MidCastDelay delay="1.0" />
              <equip when="Precast" set="HP" />
              <equip when="Midcast" delay="0.75" set="HP" />
            </if>
            <else>
              <equip when="Midcast" set="Enmity|HealingMagic" />
            </else>
          </elseif>
          <else>
            <equip when="Midcast" set="Enmity|HealingMagic" />
          </else>
        </if>
        <else>
          <equip when="precast" set="Fastcast"/>
          <if Spell="Cure II|Cure III|Cure IV">
            <if SpellTargetType="SELF">
              <equip when="Midcast" set="Cure" />
            </if>
            <else>
              <equip when="Midcast" set="Enmity|HealingMagic" />
            </else>
          </if>
        </else>       
      </if>
      <elseif Skill="DivineMagic">
        <equip when="precast" set="Fastcast"/>
        <if spell="Flash">
          <equip when="midcast" set="Enmity"/>
        </if>
        <elseif spell="Enlight">
          <equip when="midcast" set="Haste"/>
        </elseif> 
        <else>
          <equip when="midcast" set="DivineMagic" />
        </else>        
      </elseif>
      <elseif Skill="EnhancingMagic">
        <equip when="precast" set="Fastcast"/>
        <if spell="Reprisal">
          <equip when="midcast" set="haste"/>
        </if>
        <elseif spell="Phalanx">
          <equip when="midcast" set="haste|EnhancingMagic"/>
        </elseif>
        <else>
          <equip when="midcast" set="EnhancingMagic" />
        </else>        
      </elseif>
